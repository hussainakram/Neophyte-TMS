<%= form_with(model: project, local: true, html: {class: "form-horizontal center"}) do |f| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :name, "Name:", class: "col-md-4 control-label" %>
    <div class="col-md-5">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :category, "Category:", class: "col-md-4 control-label" %>
    <div class="col-md-5">
      <%= f.text_field :category, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, "Description:", class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_area :description, class: "form-control", size: "10x6" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :start_date, "Start_Date:", class: "col-md-4 control-label" %>
    <div class="col-md-5">
      <%= f.text_field :start_date, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :end_date, "End_Date:", class: "col-md-4 control-label" %>
    <div class="col-md-5">
      <%= f.text_field :end_date, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_updated_at, "Last_Updated_At:", class: "col-md-4 control-label" %>
    <div class="col-md-5">
      <%= f.text_field :last_updated_at, class: "form-control" %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-outline-info my-2 my-sm-0 offset-md-3" %>
  </div>
<% end %>
