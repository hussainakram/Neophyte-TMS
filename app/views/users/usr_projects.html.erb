<div class="row">
  <div class="container">
    <div class="row">
      <h2 class="col-md-7"><span ><%= @user.name %></span>'s Projects </h2>
      <div class="level col-md-4" style="text-align: right;">
        <h3> <%= @projects.count  %> </h3>
      </div>
    </div>
<hr class="dotted">
<table class="table table-responsive table-hover">
  <thead class= "table-info">
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Last Updated</th>
      <th>Challenges</th>
      <% if current_user.admin? %> <th>Actions</th> <% end %>
    </tr>

  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><strong><%= link_to project.name, project %></strong></td>
        <td><%= project.category %></td>
        <td><%= project.start_date %></td>
        <td><%= project.end_date %></td>
        <td><%= project.updated_at.strftime("%m/%d/%Y") %></td>
        <td><%= link_to image_tag('next.png', class: 'next-icon'), project_challenges_path(project) %></td>
        <% if current_user.admin?  %>
          <td>
            <%= link_to '', project, class: 'fa fa-eye fa-lg btn' %>
            <%= link_to '', edit_project_path(project), class: 'fa fa-edit fa-lg btn' %>
            <%= link_to '', project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'fa fa-remove fa-lg btn' %>
          </td>
        <% end  %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
