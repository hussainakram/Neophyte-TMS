<%= form_with(model: challenge,url: [@project, @challenge], local: true, html: {class: "form-horizontal center"}) do |form| %>
  <% if challenge.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(challenge.errors.count, "error") %> prohibited this challenge from being saved:</h2>

      <ul>
      <% challenge.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, "Name:", class: "col-md-4 control-label" %>
    <div class="col-md-5">
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :category, "Category:", class: "col-md-4 control-label" %>
    <div class="col-md-5">
      <%= form.text_field :category, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :description, "Description:", class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= form.text_area :description, class: "form-control", size: "10x6" %>
    </div>
  </div>
  <br>
  <div class="form-group">
    <div class="row">
      <%= form.label :duration, "Duration:", class: "col-md-1 control-label" %>
      <div class="col-md-2">
        <%= form.text_field :duration, class: "form-control" %>
      </div>

      <%= form.label :points, "Points:", class: "col-md-1 control-label" %>
      <div class="col-md-2">
        <%= form.text_field :points, class: "form-control" %>
      </div>

      <div class="col-md-2">
        <%= form.select(:level, options_for_select([["Select Level", ""], ['Low', 'low'], ['Medium', 'low'], ['High', 'high']]), {}, {class: "form-control"}) %>
      </div>
    </div>
  </div>
  <br>
  <div class="actions">
    <%= form.submit "Submit", class: "btn btn-outline-info my-2 my-sm-0 offset-md-1" %>
  </div>
<% end %>
