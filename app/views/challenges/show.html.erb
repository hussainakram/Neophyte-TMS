<%= link_to '', project_challenges_path(@challenge.project_id), class: 'fa fa-lg fa-arrow-left btn' %>
<div class="card col-md-7 offset-md-2">
  <div class="card-header">
    <b><%= @challenge.name %></b>
    <%= link_to '', edit_challenge_path(@challenge), class: 'fa fa-edit fa-lg btn pull-right' %>
  </div>
  <div class="card-block">
    <h5>Description:</h5>
    <p class="card-text"><%= @challenge.description %></p>
    <h5>Duration:</h5>
    <p class="card-text"><%= @challenge.duration %></p>
    <h5>Level:</h5>
    <p class="card-text"><%= @challenge.level %></p>
    <h5>Points:</h5>
    <p class="card-text"><%= @challenge.points %></p>
    <h5>Updated At:</h5>
    <p class="card-text"><%= @challenge.updated_at %></p>
  </div>
</div>
