<h1>Challenges</h1>
<br>

<table class="table table-responsive table-hover ">
  <thead class= "table-info">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Description</th>
      <th>Duration</th>
      <th>Points</th>
      <th>Updated At </th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @challenges.each do |challenge| %>
      <tr>
        <td><%= challenge.id %></td>
        <td><%= challenge.name %></td>
        <td><%= challenge.description %></td>
        <td><%= challenge.duration %></td>
        <td><%= challenge.points %></td>
        <td><%= challenge.updated_at %></td>
        <td>
          <%= link_to '', challenge, class: 'fa fa-eye fa-lg btn' %>
          <%= link_to '', edit_challenge_path(challenge), class: 'fa fa-edit fa-lg btn' %>
          <%= link_to '', challenge, method: :delete, data: { confirm: 'Are you sure?' }, class: 'fa fa-remove fa-lg btn' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Challenge', new_project_challenge_path, class: "fa fa-plus-circle btn btn-outline-primary my-2 my-sm-0 btn-lg btn btn-info"%>
