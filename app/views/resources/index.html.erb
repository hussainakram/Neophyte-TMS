<%= link_to '', challenge_path(@challenge), class: 'fa fa-lg fa-arrow-left btn' %>
<h1>Available Resources</h1>



<h1> Images </h1>
<div class="container ">
 <div class="gallery">
	<div class="well well-lg">
     <% @resources.each do |resource| %>
    	 <%  if (resource.image != nil) %>
     	<div class= " resource_img">
     		<figure>
     			<img>
			<%= image_tag resource.image.url %>
		</img>
			</figure>
		</div>
		<%  end %>
 	<% end %>
 </div>
</div>
</div>

<br><br>
<h1> Documents </h1>
	<div class="container ">
		<div class="well well-lg">
			<% @resources.each do |resource| %>
				<%  if resource.document != nil %>
					<div class=" resource_doc">
     				<%= link_to "My document", resource.document.url, target: "_blank", class: 'btn btn-lg offset-md-5 btn-outline-primary'%>
     				</div>
     			<% end %>
 			<% end %>
 		</div>
 	</div>

<br><br>

<h1> Youtube Videos </h1>
	<div class="container ">
		<div class="well well-lg">
			<% @resources.each do |resource| %>
				<% if resource.link != nil %>
					<div class="resource_links">
     					<%= embed(resource.link) %>
     				</div>
     			<% end %>
			<% end %>
		</div>
	</div>



<br>

<%= link_to 'Add Resources', new_challenge_resource_path , class: "fa fa-plus-circle btn btn-outline-primary my-2 my-sm-0 btn-lg btn btn-info link_button" %>
