<div class="container-fluid">
  <p id="notice"><%= notice %></p>
    <h1>Chatrooms</h1>
      <table class="table table-responsive table-hover">
        <thead class="table-info">
          <tr>
            <th>Name</th>
            <th colspan="3">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @chatrooms.each do |chatroom| %>
            <tr>
              <td><h6><%= chatroom.name %></h6></td>
              <td>
                <%= link_to 'Show', chatroom, class: 'btn btn-sm btn-dark' %>
                <%= link_to 'Edit', edit_chatroom_path(chatroom), class: 'btn btn-sm btn-secondary' %>
                <%= link_to 'Destroy', chatroom, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
                <%= link_to 'Join', chatroom_chatroom_users_path(chatroom), method: :post, class: 'btn btn-sm btn-info' %>
                <%= link_to 'Leave', chatroom_chatroom_users_path(chatroom), method: :delete, class: 'btn btn-sm btn-warning' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>

      <%= link_to ' New Chatroom', new_chatroom_path, class: 'fa fa-plus-circle btn btn-outline-success' %>
</div>
